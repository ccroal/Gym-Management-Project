<h1>New Booking</h1>

<% if @session.members.count < @session.capacity %>

<form action="/bookings" method="post">

  <label
    for="select a session:">Select a Session:
      <select name="session_id">
        <% for session in @sessions %>
          <option
          <%= 'selected'if session.id == @session.id%>
          value="<%= session.id %>"> <%= session.workshop.type %> <%= session.start_date %> <%= session.start_time %>
        </option>
        <% end %>
      </select>
  </label>

  <label
    for="Select a member:">Select a Member:
      <select name="member_id">
        <% for member in @members %>
          <option value="<%= member.id %>"> <%= member.first_name %> <%= member.last_name %></option>
        <% end %>
      </select>
  </label>

  <input type="submit" value="Make Booking" >
</form>

<% else %>
<%= p "Session is Full" %>

<a href="/sessions"> Return to sessions</a>
<%end%>
